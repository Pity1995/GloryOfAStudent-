<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e8c8d">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appName"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:hint="账号"
        android:textColorHint="#bec3c7"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#2d3e50"
        android:id="@+id/welcomeEditTextUserName"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:hint="密码"
        android:textAlignment="center"
        android:textColorHint="#bec3c7"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#2d3e50"
        android:id="@+id/welcomeEditTextPassword"/>
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="注册"
            android:textSize="20sp"
            android:background="#297eb8"
            android:textColor="#ffffff"
            android:id="@+id/welcomeButtonRegister"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="登录"
            android:textSize="20sp"
            android:background="#46b39e"
            android:textColor="#ffffff"
            android:id="@+id/welcomeButtonLogin"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>